<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MyXamarinApp.Camera">
    <ContentPage.Content>
        <StackLayout>

            <Frame BackgroundColor="#2196F3" Padding="24" CornerRadius="0">
                <Label Text="MediaPicker Sample" HorizontalOptions="Center" TextColor="White" FontSize="36"/>
            </Frame>

            <Button Text="Pick Image" Clicked="Button_Clicked"/>
            <Button Text="Take" Clicked="Button1_Clicked"/>
            <Image x:Name="resultImage"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>